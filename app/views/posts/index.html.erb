<h1> Recent Questions </h1>
<table>
<% @all_posts.each do |post| %>
<div class="large table"
<tr>
  <td><%= post.title %></td>
  <td><%= link_to "Show", post_path(post), class: "button radius" %></td>
  <td><%= link_to 'Edit', edit_post_path(post), class: "button radius" %></td>
  <td><%= link_to 'Destroy', post_path(post),
  method: :delete, data: { confirm: 'Are you sure?' }, class: "button radius" %></td>
</tr>
<% end %>
</table>
